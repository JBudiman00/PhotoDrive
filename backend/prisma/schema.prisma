// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Users {
  user_id      Int     @id @default(autoincrement())
  name         String  @db.VarChar(255)
  passwordHash String  @db.VarChar(255)
  email        String  @db.VarChar(255) @unique
  photos       Photos[]
  albums       Albums[]
  useralbums   UserAlbums[]
}

model Photos {
  img_id   Int      @id @default(autoincrement())
  img      String   @db.VarChar(255)
  date     DateTime @default(now())
  img_name String   @db.VarChar(255)
  user     Users    @relation(fields: [user_id], references: [user_id])
  user_id  Int   
  photoalbums  PhotoAlbums[]   
}

model Albums {
  album_id   Int      @id @default(autoincrement())
  date       DateTime @default(now())
  album_name String   @db.VarChar(255)
  user       Users    @relation(fields: [user_id], references: [user_id])
  user_id    Int
  useralbums   UserAlbums[]  
  photoalbums  PhotoAlbums[]  
}

model UserAlbums{
  album    Albums @relation(fields: [album_id], references: [album_id])
  album_id Int 
  user     Users  @relation(fields: [user_id], references: [user_id])
  user_id  Int    
  
  @@id([album_id, user_id])
}

model PhotoAlbums{
  img      Photos @relation(fields: [img_id], references: [img_id])
  img_id   Int 
  album    Albums @relation(fields: [album_id], references: [album_id])
  album_id Int    
  
  @@id([img_id, album_id])
}